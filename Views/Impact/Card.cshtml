<script>
let cardCanvas = null;
let cardBlob = null;
const shareMessage = '@Model.ImpactStatement';
const pageUrl = window.location.href;

// Modal aÃ§ma/kapama
function openShareModal() {
    const modal = document.getElementById('shareModal');
    modal.style.display = 'flex';
    document.body.style.overflow = 'hidden';
    
    // Link gÃ¶ster
    document.getElementById('linkToCopy').textContent = pageUrl;
    
    // Native share desteÄŸi varsa gÃ¶ster
    if (navigator.share) {
        document.getElementById('nativeShareBtn').style.display = 'block';
    }
}

function closeShareModal() {
    const modal = document.getElementById('shareModal');
    modal.style.display = 'none';
    document.body.style.overflow = '';
}

// ESC tuÅŸu ile kapatma
document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeShareModal();
});

// KartÄ± canvas'a Ã§evir
async function generateCardImage() {
    const shareStatus = document.getElementById('shareStatus');
    
    try {
        if (!cardCanvas) {
            shareStatus.textContent = 'ðŸŽ¨ Kart hazÄ±rlanÄ±yor...';
            shareStatus.style.color = 'var(--primary)';
            
            const card = document.querySelector('.impact-card');
            const canvas = await html2canvas(card, {
                backgroundColor: null,
                scale: 2,
                logging: false,
                useCORS: true,
                allowTaint: true
            });
            
            cardCanvas = canvas;
            
            return new Promise((resolve) => {
