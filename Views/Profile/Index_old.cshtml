@*
    ⚠️ BU DOSYA ARTIK KULLANILMIYOR - Index.cshtml kullanılıyor
    Geri dönüş için saklanıyor
*@
@model User
@{
    ViewData["Title"] = "Profil ve Etki (ESKİ - KULLANILMIYOR)";
    var user = ViewBag.User as User;
    var wallet = ViewBag.Wallet as Wallet;
    var donations = ViewBag.Donations as List<Donation>;
    var campaigns = ViewBag.Campaigns as List<Campaign>;
    var impactAreas = ViewBag.ImpactAreas as dynamic;
    var donationCount = ViewBag.DonationCount as int? ?? 0;
    var totalDonations = ViewBag.TotalDonations as decimal? ?? 0;
    var uniqueAreasCount = ViewBag.UniqueAreasCount as int? ?? 0;
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="container page-container">
    <div style="max-width: 800px; margin: 0 auto;">
        <!-- Başlık -->
        <div class="mb-8" style="text-align: center;">
            <h1 class="page-title">Profil ve Etki</h1>
            <p class="page-description" style="font-size: 16px; line-height: 1.6;">
                Senin katkıların, iyiliğin bir parçası. İşte yarattığın etki.
            </p>
        </div>

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert-success" style="margin-bottom: 24px; padding: 16px; background: linear-gradient(135deg, rgba(16, 185, 129, 0.08) 0%, rgba(16, 185, 129, 0.04) 100%); border-left: 4px solid var(--primary); border-radius: var(--radius-md); color: var(--primary-dark);">
                @successMessage
            </div>
        }

        <!-- Kimlik Bilgisi -->
        <div class="stats-grid" style="margin-bottom: 32px;">
            <div class="card stat-card">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <div class="stat-value">@user?.FullName</div>
                <div class="stat-label">Adınız Soyadınız</div>
            </div>
            <div class="card stat-card">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                <div class="stat-value" style="font-size: 14px;">@user?.Email</div>
                <div class="stat-label">E-Posta</div>
            </div>
            <div class="card stat-card">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="stat-value">@wallet?.Balance.ToString("N0")</div>
                <div class="stat-label">Toplam Puanınız</div>
            </div>
            <div class="card stat-card">
                <svg class="stat-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div class="stat-value">@wallet?.Tier</div>
                <div class="stat-label">Üyelik Seviyesi</div>
            </div>
        </div>

        <!-- Bağış Özeti -->
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 16px; margin-bottom: 32px;">
            <div class="card">
                <div class="card-body">
                    <h3 style="font-size: 16px; font-weight: 600; margin-bottom: 12px;">Bağış Özeti</h3>
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div>
                            <div style="font-size: 24px; font-weight: bold; color: var(--primary);">@donationCount</div>
                            <div style="font-size: 14px; color: var(--text-secondary);">Toplam Bağış Sayısı</div>
                        </div>
                        <div>
                            <div style="font-size: 24px; font-weight: bold; color: var(--primary);">₺@totalDonations.ToString("N0")</div>
                            <div style="font-size: 14px; color: var(--text-secondary);">Toplam Bağış Tutarı</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h3 style="font-size: 16px; font-weight: 600; margin-bottom: 12px;">Hesap Bilgileri</h3>
                    <div style="font-size: 14px; color: var(--text-secondary); line-height: 1.8;">
                        <div>Üyelik Tarihi: @user?.CreatedAt.ToString("dd.MM.yyyy")</div>
                        <div>Kazanılan Toplam Puan: @wallet?.TotalEarned</div>
                        <div>Harcanan Toplam Puan: @wallet?.TotalSpent</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bağış Geçmişi -->
        <div class="card">
            <div class="card-body">
                <h3 style="font-size: 18px; font-weight: 600; margin-bottom: 16px;">Bağış Geçmişi</h3>

                @if (donations != null && donations.Any())
                {
                    <div style="overflow-x: auto;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <thead style="background-color: #f3f4f6; border-bottom: 2px solid #e5e7eb;">
                                <tr>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Tarih</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Tutar</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Kazanılan Puan</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var donation in donations)
                                {
                                    <tr style="border-bottom: 1px solid #e5e7eb;">
                                        <td style="padding: 12px; font-size: 14px;">@donation.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td style="padding: 12px; font-size: 14px; font-weight: 500;">₺@donation.Amount.ToString("N0")</td>
                                        <td style="padding: 12px; font-size: 14px; color: var(--primary); font-weight: 600;">+@donation.PointsEarned</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p style="text-align: center; color: var(--text-secondary); padding: 24px;">Henüz bağış yapmadınız</p>
                }
            </div>
        </div>

        <!-- İşlem Geçmişi -->
        <div class="card" style="margin-top: 24px;">
            <div class="card-body">
                <h3 style="font-size: 18px; font-weight: 600; margin-bottom: 16px;">Puan İşlemleri</h3>

                @if (wallet?.Transactions != null && wallet.Transactions.Any())
                {
                    <div style="overflow-x: auto;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <thead style="background-color: #f3f4f6; border-bottom: 2px solid #e5e7eb;">
                                <tr>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Tarih</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Tür</th>
                                    <th style="padding: 12px; text-align: left; font-weight: 600; font-size: 14px;">Açıklama</th>
                                    <th style="padding: 12px; text-align: right; font-weight: 600; font-size: 14px;">Miktar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tx in wallet.Transactions.Take(20))
                                {
                                    <tr style="border-bottom: 1px solid #e5e7eb;">
                                        <td style="padding: 12px; font-size: 14px;">@tx.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td style="padding: 12px; font-size: 14px;">
                                            <span style="background-color: @(tx.Type == TransactionType.Earn ? "#dbeafe" : "#fee2e2"); color: @(tx.Type == TransactionType.Earn ? "#0369a1" : "#991b1b"); padding: 4px 8px; border-radius: 4px; font-size: 12px;">
                                                @(tx.Type == TransactionType.Earn ? "Kazanç" : "Harcama")
                                            </span>
                                        </td>
                                        <td style="padding: 12px; font-size: 14px;">@tx.Description</td>
                                        <td style="padding: 12px; text-align: right; font-weight: 600; color: @(tx.Amount > 0 ? "var(--primary)" : "#dc2626");">
                                            @(tx.Amount > 0 ? "+" : "")@tx.Amount
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p style="text-align: center; color: var(--text-secondary); padding: 24px;">İşlem geçmişi boş</p>
                }
            </div>
        </div>
    </div>
</div>
